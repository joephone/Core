<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:background="?colorBackground"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/iv_shici_refresh_header_state"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/standard_padding"
        android:layout_toStartOf="@+id/tv_shici_refresh_header_content"
        android:contentDescription="@android:string/untitled"
        app:tint="@color/colorGitHubGreen"
        tools:ignore="UseAppTint"
        tools:src="@drawable/ic_guard_check_github_green_24dp" />
        <!--    android:tint="?colorIconSecond"-->
    <TextView
        android:id="@+id/tv_shici_refresh_header_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="300dp"
        android:text="下拉刷新"
        android:textColor="@color/colorGitHubGreen"
        android:textSize="@dimen/text_auxiliary" />

    <!-- ?colorTextSecond-->
</merge>